---
import Layout from '../../layouts/Layout.astro';
import ColorIcons from '../../components/ColorIcons.astro';
import fs from 'node:fs';
import path from 'node:path';
import commandersList from '../../data/commanders.json';

export function getStaticPaths() {
  return commandersList.map((c: any) => ({ params: { id: c.id } }));
}

const { id } = Astro.params;
const dataPath = path.join(process.cwd(), 'src', 'data', 'commanders', `${id}.json`);
const data = JSON.parse(fs.readFileSync(dataPath, 'utf-8'));
const { commander, top_cards, decks } = data;

const categories = [
  { key: 'creatures', label: '–°—É—â–µ—Å—Ç–≤–∞' },
  { key: 'instants', label: '–ú–≥–Ω–æ–≤–µ–Ω–Ω—ã–µ' },
  { key: 'sorceries', label: '–í–æ–ª—à–µ–±—Å—Ç–≤–∞' },
  { key: 'artifacts', label: '–ê—Ä—Ç–µ—Ñ–∞–∫—Ç—ã' },
  { key: 'enchantments', label: '–ß–∞—Ä—ã' },
  { key: 'planeswalkers', label: 'Planeswalkers' },
  { key: 'lands', label: '–ó–µ–º–ª–∏' },
];
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---
<Layout title={commander.name}>
  <div class="flex flex-col md:flex-row gap-8 mb-10">
    <div class="w-full md:w-80 shrink-0">
      {commander.image_uri && (
        <img src={commander.image_uri} alt={commander.name} class="w-full rounded-xl shadow-2xl" />
      )}
    </div>
    <div>
      <h1 class="text-3xl font-bold text-amber-400 mb-2">{commander.name}</h1>
      {commander.is_banned && <span class="text-red-400 font-bold">üö´ –ó–∞–±–∞–Ω–µ–Ω –∫–∞–∫ –∫–æ–º–º–∞–Ω–¥–µ—Ä</span>}
      <p class="text-gray-400 mb-4">{commander.type_line}</p>
      <div class="flex items-center gap-4 mb-4">
        <ColorIcons colors={commander.color_identity} size="w-6 h-6" />
        {commander.mana_cost && <span class="text-gray-400">{commander.mana_cost}</span>}
      </div>
      <div class="grid grid-cols-3 gap-3">
        <div class="bg-gray-900 rounded p-3 text-center">
          <div class="text-2xl font-bold text-amber-400">{commander.deck_count}</div>
          <div class="text-xs text-gray-400">–í—Å–µ–≥–æ –¥–µ–∫–ª–∏—Å—Ç–æ–≤</div>
        </div>
        <div class="bg-gray-900 rounded p-3 text-center">
          <div class="text-2xl font-bold text-amber-400">{commander.deck_count_90d ?? '‚Äî'}</div>
          <div class="text-xs text-gray-400">–ó–∞ 90 –¥–Ω–µ–π</div>
        </div>
        <div class="bg-gray-900 rounded p-3 text-center">
          <div class="text-2xl font-bold text-amber-400">{commander.deck_count_30d ?? '‚Äî'}</div>
          <div class="text-xs text-gray-400">–ó–∞ 30 –¥–Ω–µ–π</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Category tabs -->
  <div class="mb-8">
    <div class="flex flex-wrap gap-2 mb-6 border-b border-gray-800 pb-3">
      {categories.map((cat, i) => {
        const cards = (top_cards as any)?.[cat.key];
        if (!cards || cards.length === 0) return null;
        return (
          <button
            data-tab={cat.key}
            class={`tab-btn px-4 py-2 rounded-t text-sm font-medium transition ${i === 0 ? 'bg-amber-600 text-white' : 'bg-gray-800 text-gray-400 hover:text-white'}`}
          >
            {cat.label} ({cards.length})
          </button>
        );
      })}
    </div>

    {categories.map((cat, i) => {
      const cards = (top_cards as any)?.[cat.key];
      if (!cards || cards.length === 0) return null;
      return (
        <div data-panel={cat.key} class={`tab-panel ${i === 0 ? '' : 'hidden'}`}>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-3">
            {cards.slice(0, 30).map((card: any) => (
              <a href={card.slug ? `/rudc-rec/cards/${card.slug}` : '#'} class="card-hover rounded-lg overflow-hidden bg-gray-900 block hover:ring-2 hover:ring-amber-500 transition" data-card-preview={card.image_uri}>
                {card.image_uri && (
                  <img src={card.image_uri} alt={card.name} class="w-full" loading="lazy" onerror="this.style.display='none'" />
                )}
                <div class="p-2">
                  <div class="text-xs font-medium truncate">{card.name}</div>
                  <div class="flex justify-between text-xs text-gray-400 mt-1">
                    <span>{card.inclusion_pct}%</span>
                    <span class="text-green-400">+{card.synergy}%</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      );
    })}
  </div>

  <!-- Partners section -->
  {commander.has_partners && commander.partners && commander.partners.length > 0 && (
    <div class="mb-8">
      <div class="bg-gray-900 border border-amber-600/30 rounded-lg p-4 mb-4">
        <span class="text-amber-400 font-medium">ü§ù –≠—Ç–æ—Ç –∫–æ–º–º–∞–Ω–¥–µ—Ä –∏–≥—Ä–∞–µ—Ç—Å—è —Å –ø–∞—Ä—Ç–Ω—ë—Ä–æ–º</span>
        <a href={`${base}/partners/${commander.id}`} class="ml-2 text-amber-400 hover:text-amber-300 underline text-sm">–í—Å–µ –ø–∞—Ä—Ç–Ω—ë—Ä—ã ‚Üí</a>
      </div>
      <h2 class="text-2xl font-bold text-amber-400 mb-4">–ü–æ–ø—É–ª—è—Ä–Ω—ã–µ –ø–∞—Ä—Ç–Ω—ë—Ä—ã</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
        {commander.partners.slice(0, 10).map((p: any) => {
          const pairId = [commander.id, p.id].sort().join('--');
          return (
            <a href={`${base}/commanders/${pairId}`} class="bg-gray-900 rounded-lg overflow-hidden hover:ring-2 hover:ring-amber-500 transition block">
              {p.image_uri && <img src={p.image_uri} alt={p.name} class="w-full" loading="lazy" />}
              <div class="p-2">
                <div class="text-xs font-medium truncate">{p.name}</div>
                <div class="flex items-center gap-1 mt-1">
                  {p.color_identity && <ColorIcons colors={p.color_identity} size="w-3.5 h-3.5" />}
                  <span class="text-xs text-gray-400">{p.deck_count} –¥–µ–∫–ª–∏—Å—Ç–æ–≤</span>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  )}

  <!-- Decklists -->
  {decks && decks.length > 0 && (
    <div>
      <h2 class="text-2xl font-bold text-amber-400 mb-4">–î–µ–∫–ª–∏—Å—Ç—ã ({decks.length})</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead class="text-gray-400 border-b border-gray-800">
            <tr>
              <th class="text-left py-2 px-2">–î–µ–∫</th>
              <th class="text-left py-2 px-2">–ê–≤—Ç–æ—Ä</th>
              <th class="text-left py-2 px-2">–î–∞—Ç–∞</th>
              <th class="text-left py-2 px-2">–°—Å—ã–ª–∫–∞</th>
            </tr>
          </thead>
          <tbody>
            {decks.map((d: any) => (
              <tr class="border-b border-gray-800/50 hover:bg-gray-900">
                <td class="py-2 px-2">{d.name || '–ë–µ–∑ –Ω–∞–∑–≤–∞–Ω–∏—è'}</td>
                <td class="py-2 px-2 text-gray-400">{d.author || '‚Äî'}</td>
                <td class="py-2 px-2 text-gray-400">{d.date || '‚Äî'}</td>
                <td class="py-2 px-2">
                  {d.url && <a href={d.url} target="_blank" class="text-amber-400 hover:text-amber-300">Moxfield ‚Üó</a>}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  )}

  <script>
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const key = (btn as HTMLElement).dataset.tab!;
        document.querySelectorAll('.tab-btn').forEach(b => b.className = 'tab-btn px-4 py-2 rounded-t text-sm font-medium transition bg-gray-800 text-gray-400 hover:text-white');
        btn.className = 'tab-btn px-4 py-2 rounded-t text-sm font-medium transition bg-amber-600 text-white';
        document.querySelectorAll('.tab-panel').forEach(p => (p as HTMLElement).classList.add('hidden'));
        document.querySelector(`[data-panel="${key}"]`)?.classList.remove('hidden');
      });
    });
  </script>
</Layout>
